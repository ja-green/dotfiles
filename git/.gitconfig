## core

[color]
	ui 		             = auto
  interactive        = auto

[core]
  editor             = nvim
  pager              = more

[init]
  templatedir        = ~/Applications/personal-development-environment/src/github.com/ja-green/dotfiles/git/template.d

[user]
	email 		         = jack.green@digital.hmrc.gov.uk
	name 		           = ja-green
  signingkey         = 82E71E34

## command

[diff]
  mnemonicprefix     = true

[merge]
	summary            = true
	tool               = nvim
	conflictstyle      = diff3

[pull]
  default            = current
  rebase             = true

[push]
  default            = current

[status]
  relativepaths      = false
  showstash          = true
  short              = true
  branch             = false
  showuntrackedfiles = all

## preferences

[browser "qt"]
  cmd                = /usr/local/bin/qt

[commit]
  gpgsign            = true

[fetch]
	fsckobjects        = true

[mergetool "nvim"]
  cmd                = nvim -f -c \"Gdiff master\" \"$MERGED\"

[receive]
	fsckobjects        = true

[rerere]
	enabled            = true
	autoupdate         = true

[submodule]
  fetchjobs          = 8

[transfer]
	fsckobjects        = true

[web]
	browser 	         = qt

[worktree]
  guessremote        = true

## alias

[alias]
	## builtin
	br 		             = branch
	cm 		             = commit
	df		             = diff
	ds		             = describe
	dt		             = difftool
	ll 		             = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
	ls		             = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate
	mb 		             = merge --no-ff --no-commit
	mt		             = mergetool
	st 		             = status
  ft                 = fetch
  pf                 = push --force-with-lease
  pl                 = pull
  pu                 = push
  sy                 = sync

  ## external
	ag		             = extern-grep
	cl		             = extern-clone
	co		             = extern-checkout
	fd		             = extern-find
	in		             = extern-info # TODO
	rq		             = extern-pull-request
	sp		             = extern-sprint
	sq		             = extern-squash # TODO
	vf		             = extern-verify
  bw                 = extern-browse
  dp                 = extern-deploy

	## shell
	al                 = !sh -c \"git config -l | grep alias | cut -c 7-\"
	hm                 = !sh -c \"git rev-parse --show-toplevel\"
	un 	  	           = !sh -c \"git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}\"
